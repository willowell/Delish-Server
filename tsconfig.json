{
    "compilerOptions": {
      "target": "es2017",                          
      "module": "commonjs",                    
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "typeRoots": ["node_modules/@types", "@types"],
    },
    "include": ["src/**/*", "@types"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}